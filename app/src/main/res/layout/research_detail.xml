<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/bg_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:background="@null"
            android:scaleType="fitCenter"
            android:id="@+id/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/title_color"
            android:text="é…’(182)"
            android:layout_centerInParent="true"
            android:drawableEnd="@drawable/dropdown"

            android:id="@+id/research_detail_title"
            />
        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:src="@drawable/scan"
            android:background="@null"
            android:scaleType="fitCenter"
            android:id="@+id/research_detail_scan"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray_color"
        />
    <se.emilsjolander.stickylistheaders.ExpandableStickyListHeadersListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="12dp"
        android:divider="@color/bg_color"
        android:fastScrollEnabled="true"
        android:id="@+id/research_detail_list"
        />
</LinearLayout>